<h1 class="text-center mb-4">Login</h1>

<%= form_tag '/login', method: :post do %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="mb-3">
          <%= label_tag :email, 'Email Address:', class: 'form-label' %>
          <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'example@example.com' %>
        </div>

        <div class="mb-3">
          <%= label_tag :password, 'Password:', class: 'form-label' %>
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: '••••••••' %>
        </div>

        <div class="mb-3">
          <%= submit_tag "Submit", class: 'btn btn-primary w-100' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
